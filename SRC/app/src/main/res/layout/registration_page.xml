<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:padding="0dp">

    <ImageView
        android:id="@+id/register_logo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/in_app_logo"
        app:layout_constraintBottom_toTopOf="@id/registration_header"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/registration_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/register_logo"
        app:layout_constraintBottom_toTopOf="@id/registration_information_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <LinearLayout
        android:id="@+id/registration_information_container"
        android:layout_width="350dp"
        android:layout_height="325dp"
        android:background="@drawable/border_shape_general"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/registration_header"
        app:layout_constraintBottom_toTopOf="@id/register_info_button">

        <EditText
            android:id="@+id/register_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:background="@drawable/border_shape_grey"
            android:hint="Email Address"
            android:inputType="textEmailAddress"
            android:padding="6px"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/register_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:background="@drawable/border_shape_grey"
            android:hint="Password"
            android:inputType="textVisiblePassword"
            android:padding="6px"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/register_first_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:background="@drawable/border_shape_grey"
            android:hint="First Name"
            android:inputType="textPersonName"
            android:padding="6px"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/register_last_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:background="@drawable/border_shape_grey"
            android:hint="Last Name"
            android:inputType="textPersonName"
            android:padding="6px"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/register_date_of_birth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:background="@drawable/border_shape_grey"
            android:hint="Date Of Birth  (DD/MM/YYYY)"
            android:inputType="date"
            android:padding="6px"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/register_phone_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:background="@drawable/border_shape_grey"
            android:hint="Phone Number"
            android:inputType="phone"
            android:padding="6px"
            android:textAlignment="center" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/register_user_button"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="Entrant"
                android:textColor="@color/white"
                android:checked="false"
                android:buttonTint="@color/lightblue"
                android:layout_marginStart="50dp"/>

            <CheckBox
                android:id="@+id/register_organizer_button"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_marginStart="50dp"
                android:text="Organizer"
                android:checked="false"
                android:buttonTint="@color/lightblue"
                android:textColor="@color/white"/>

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/register_info_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:textColor="@color/white"
        android:backgroundTint="@color/lightblue"
        app:layout_constraintTop_toBottomOf="@id/registration_information_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>